@model Category

<!-- Back Button -->
<a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
    <i class="bi bi-arrow-left-circle fs-2"></i>
</a>
<div class=" card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradiant ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white  py-2">Edit Category</h2>
            </div>

        </div>

    </div>
</div>
<div class="card-body p-4">

    <!-- Form for Adding Category -->
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="border p-3 mt-4">
            <div class="row pb-2">
              
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                <label asp-for="Name" class="ms-2"></label>
               
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                <label asp-for="DisplayOrder" class="ms-2"></label>
               
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row mt-3">
                  <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            </div>
          
        </div>
    </form>
</div>


